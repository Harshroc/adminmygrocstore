      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Orders List</h3>
        <div class="row mt">
          <!--  DATE PICKERS -->
          <div class="col-lg-12">
            <div class="content-panel">
                <div class="adv-table" style="padding: 10px 20px 0px 20px;overflow: scroll;">
                    <table id="example" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr. No</th>
