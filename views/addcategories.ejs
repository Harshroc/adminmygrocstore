<%- include('header', { url: urls })  %>

<%- include('sidebar', { url: urls }) %>

    
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Add Categories</h3>
        <div class="row mt">
          <!--  DATE PICKERS -->
          <div class="col-lg-12">
            <div class="form-panel">
              <form method="post" enctype="multipart/form-data" action="/categories/handleaddcategories" class="form-horizontal style-form">
                <div class="form-group">
                  <label class="control-label col-md-3">Category Name</label>
                  <div class="col-md-8 col-xs-11">
                    <input class="form-control" name="categoryName" type="text" placeholder="Enter Category Name" data-rule="required" data-msg="Please write something for us">                    
                  </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Category Description</label>
                    <div class="col-md-8 col-xs-11">
                        <textarea class="form-control" style="resize: none;" name="categoryDesc" placeholder="Enter Category Description" rows="5" data-rule="required" data-msg="Please write something for us"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Upload Image</label>
                    <div class="col-md-8 col-xs-11">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                              <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="">
                            </div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
                            <div>
                              <span class="btn btn-theme02 btn-file">
                                <span class="fileupload-new"><i class="fa fa-paperclip"></i> Select image</span>
                              <span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
                              <input type="file" name="categoryUpload" class="default">
                              </span>                              
                            </div>
                        </div>
                        <span class="label label-info">NOTE!</span>
                        <span>
                            Attached image thumbnail is
                            supported in Latest Firefox, Chrome, Opera,
                            Safari and Internet Explorer 10 only
                        </span>

                        
                        
      
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 col-xs-4"></div>
                    <div align="center" class="col-md-4 col-xs-4">
                        
                        <input class="form-control btn btn-theme" type="submit" >                    
                    </div>
                    <div class="col-md-4 col-xs-4"></div>
                </div>
                

                
        


                
              
              </form>

              <% if(typeof alert != 'undefined') { %>
                <div class="form-group">
                  <div style="background-color: red;color:white;text-align: center;" class="col-md-8 col-xs-11">
                    <% alert.forEach(function(error) { %>                   
                      <%= error.msg %>                 
                  <% }) %>
              <% } %>  
              <% if(typeof err != 'undefined') { %>
               
                   
                <%= err %>
           
        
    <% } %>  
                  </div>
                </div>
                
    
            

            </div>
            <!-- /form-panel -->
           
          </div>
          <!-- /col-lg-12 -->
        </div>
        <!-- /row -->
        
        </div>
        <!-- row -->
      </section>
      <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->

    <%- include('footer', { url: urls }) %>